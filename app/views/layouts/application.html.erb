<!DOCTYPE html>
<html>
  <head>
    <title>Connect</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if Rails.env == "development" %>
      <%= params %><br>
      <%= session.keys %><br>
    <% end %>

    <!-- header -->
      <header style="text-align: center; background-color: silver; height: 50px;">
        <nav class="navbar navbar-light bg-light">
          <%= link_to t('app.title'), root_path, class: "navbar-brand" %>
          <%= welcome_model %>
          <%= user_sign_in_or_sign_out_button %>
          <%= pharmacy_sign_in_or_sign_out_button %>
          <%= user_sign_up_or_show_button %>
          <%= pharmacy_sign_up_or_show_button %>
          <%= user_search_button %>
          <%= link_to t('activerecord.title.pharmacy.search'), pharmacies_path, class: "btn btn-primary" %>
          <%= developer_button %>
        </div>
      </header>
    <!-- header -->

    <!-- sample_login -->
      <div style="text-align: center; background-color: silver;">
        <%= render partial: "shared/sample_login" %>
      </div>
    <!-- sample_login -->
    
    <!-- alert_message -->
      <% if notice.present? %>
        <p class="alert alert-success"><%= notice %></p>
      <% end %>

      <% if alert.present? %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>
    <!-- alert_message -->

    <!-- main-content -->
      <%= yield %>
    <!-- main-content -->

    <!-- footer -->
      <footer style="background-color: purple; color: white; font-size: 2rem; width: 100%; height: 30px; position: absolute; bottom: 0;">
        <p>Copyright Â© 2021 Yoshinori Shimoda All Rights Reserved.</p>
      </fotter>
    <!-- footer -->
  </body>
</html>
